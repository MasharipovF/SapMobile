<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:columnCount="1"
    android:rowCount="4"
    tools:context=".activities.MainPage">


    <Button
        android:id="@+id/btnItems"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:text="ITEMS"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnSalesOrder"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:text="SALES ORDERS"
        android:textSize="25sp"
        tools:srcCompat="@drawable/sales" />

    <Button
        android:id="@+id/btnBusinessPartners"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:text="BUSINESS PARTNERS"
        android:textSize="24sp"
        tools:srcCompat="@drawable/bp" />

    <Button
        android:id="@+id/btnInvoices"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:text="INVOICES"
        android:textSize="25sp" />

</com.google.android.material.circularreveal.CircularRevealGridLayout>